<h3>{{viewTitle}}</h3>

<form action="/forgotPassword" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{user.fullName}}">
        <div class="text-danger">
            {{user.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
    <div class="form-group">
        <a class="btn btn-secondary" href="/home"><i class="fa fa-list-alt"></i> Home</a>
        <a class="btn btn-secondary" href="/forgotPassword" style="float: right;"><i class="fa fa-list-alt"></i> Resend password</a>
    </div>

</form>