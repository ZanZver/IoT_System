version: '2'
services:
  mongo_cfg_1:
      container_name: mongo_cfg_1
      image: mongo
      command: mongod --configsvr --replSet mongo_ReplicaSet_1_conf --dbpath /data/db --port 27017
      environment:
        TERM: xterm
      expose:
        - "27017"
      volumes:
        - mongo_cfg_1_v3:/data/db
  mongo_cfg_2:
      container_name: mongo_cfg_2
      image: mongo
      command: mongod --configsvr --replSet mongo_ReplicaSet_1_conf --dbpath /data/db --port 27017
      environment:
        TERM: xterm
      expose:
        - "27017"
      volumes:
        - mongo_cfg_2_v3:/data/db
  mongo_cfg_3:
      container_name: mongo_cfg_3
      image: mongo
      command: mongod --configsvr --replSet mongo_ReplicaSet_1_conf --dbpath /data/db --port 27017
      environment:
        TERM: xterm
      expose:
        - "27017"
      volumes:
        - mongo_cfg_3_v3:/data/db

volumes:
  mongo_cfg_1_v3: {}
  mongo_cfg_2_v3: {}
  mongo_cfg_3_v3: {}