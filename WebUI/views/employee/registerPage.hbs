<h3>{{viewTitle}}</h3>

<form action="/register" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username" value="{{user.username}}">
        <div class="text-danger">
            {{user.usernameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
        <div class="text-danger">
            {{user.emailError}}</div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" value="{{user.password}}">
        <div class="text-danger">
            {{user.passwordError}}</div>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{user.name}}">
        <div class="text-danger">
            {{user.nameError}}</div>
    </div>
    <div class="form-group">
    <label>Surname</label>
        <input type="text" class="form-control" name="surname" placeholder="Surname" value="{{user.surname}}">
        <div class="text-danger">
            {{user.surnameError}}</div>
    </div>
    <div class="form-group">
    <label>Address line 1</label>
        <input type="text" class="form-control" name="addressLine1" placeholder="Address line 1" value="{{user.addressLine1}}">
        <div class="text-danger">
            {{user.addressLine1Error}}</div>
    </div>
    <div class="form-group">
    <label>Address line 2</label>
        <input type="text" class="form-control" name="addressLine2" placeholder="Address line 2" value="{{user.addressLine2}}">
        <div class="text-danger">
            {{user.addressLine2Error}}</div>
    </div>
    <div class="form-group">
        <label>Postcode</label>
        <input type="text" class="form-control" name="postcode" placeholder="Postcode" value="{{user.postcode}}">
        <div class="text-danger">
            {{user.postcodeError}}</div>
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{user.city}}">
        <div class="text-danger">
            {{user.cityError}}</div>
    </div>
    <div class="form-group">
        <label>Country</label>
        <input type="text" class="form-control" name="country" placeholder="Country" value="{{user.country}}">
        <div class="text-danger">
            {{user.countryError}}</div>
    </div>


    <div class="form-group">
        <a class="btn btn-secondary" href="/home"><i class="fa fa-list-alt"></i> Home</a>
        <button type="submit" class="btn btn-info" style="float: right;"><i class="fa fa-database"></i> Register</button>
    </div>

</form>